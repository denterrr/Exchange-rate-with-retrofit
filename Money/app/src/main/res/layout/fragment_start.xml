<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.StartFragment">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:textColor="@color/black"
        android:fontFamily="@font/cormorant_sc_medium"
        android:textSize="40sp"
        android:text="ВАЛЮТА"
        android:id="@+id/valuta"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/valuta"
        android:layout_marginStart="50dp"
        android:src="@drawable/ic_val"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/valuta"
        app:layout_constraintStart_toStartOf="@+id/valuta"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textSize="14sp"
        android:text="Актуальный курс"
        android:id="@+id/actual"/>

    <View
        android:id="@+id/grayView"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/gray_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actual" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/grayView"
        app:layout_constraintStart_toStartOf="@+id/grayView"
        app:layout_constraintEnd_toEndOf="@+id/grayView"
        app:layout_constraintBottom_toBottomOf="@+id/grayView"
        android:text="Загрузка..."
        android:textSize="20sp"
        android:id="@+id/tv_load"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/grayView"
        app:layout_constraintStart_toStartOf="@+id/grayView"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Популярное"
        android:id="@+id/pop"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/pop"
        app:layout_constraintEnd_toStartOf="@+id/sell_tv"
        android:layout_marginEnd="50dp"

        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="Купить"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/pop"
        app:layout_constraintEnd_toEndOf="@+id/grayView"
        android:layout_marginEnd="30dp"

        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="Продать"
        android:id="@+id/sell_tv"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_pop"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/grayView"
        app:layout_constraintEnd_toEndOf="@+id/grayView"
        app:layout_constraintStart_toStartOf="@+id/grayView"
        app:layout_constraintBottom_toBottomOf="@id/grayView"
        android:layout_marginBottom="15dp"
        app:layout_constrainedHeight="true"
        android:layout_marginTop="35dp"
        app:layout_constrainedWidth="true"
        tools:listitem="@layout/item_layout"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/grayView"
        app:layout_constraintStart_toStartOf="@+id/grayView"
        app:layout_constraintEnd_toEndOf="@+id/grayView"
        android:background="@color/black"
        android:id="@+id/razdel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/razdel"
        app:layout_constraintStart_toStartOf="@+id/razdel"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Остальное"
        android:id="@+id/added"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/added"
        app:layout_constraintEnd_toStartOf="@+id/sell_tv2"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="Купить"
        android:id="@+id/buy_added"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/added"
        app:layout_constraintEnd_toEndOf="@+id/grayView"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="Продать"
        android:id="@+id/sell_tv2"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:padding="4dp"
        android:clipToPadding="false"
        android:id="@+id/rv_added"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/buy_added"
        app:layout_constraintEnd_toEndOf="@+id/grayView"
        app:layout_constraintStart_toStartOf="@+id/grayView"
        android:layout_marginBottom="15dp"
        app:layout_constrainedHeight="true"
        android:layout_marginTop="15dp"
        app:layout_constrainedWidth="true"
        tools:listitem="@layout/item_layout"
        />
</androidx.constraintlayout.widget.ConstraintLayout>